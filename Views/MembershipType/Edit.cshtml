@model BookRental.Models.MembershipTypes

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-warning text-center"><span class="fa fa-edit"></span><span class="fa fa-user"></span></h3>
        <h3 class="text-center text-info">Edit Membership type</h3>
        <hr />
        <div class="border rounded p-2 border-info text-info font-weight-bold">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.membershipTypesIdPK)

            <div class="row my-2">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md">
                    @Html.TextBoxFor(model => model.name, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.SignUpFee, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md">
                    @Html.TextBoxFor(model => model.SignUpFee, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.chargeRateOneMonth, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md">
                    @Html.TextBoxFor(model => model.chargeRateOneMonth, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.chargeRateSixMonth, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md">
                    @Html.TextBoxFor(model => model.chargeRateSixMonth, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <br />
    <div>
        <input type="submit" value="Save" class="btn btn-sm btn-primary" />
        @Html.Partial("_BackToListButtonPartial")
    </div>
}

