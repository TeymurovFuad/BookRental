@model BookRental.Models.MembershipTypes

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create new member</h4>
        <hr />
        <div class="border rounded border-primary p-2 font-weight-bold text-info">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.SignUpFee, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md">
                    @Html.EditorFor(model => model.SignUpFee, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SignUpFee, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.chargeRateOneMonth, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md">
                    @Html.EditorFor(model => model.chargeRateOneMonth, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.chargeRateOneMonth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.chargeRateSixMonth, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md">
                    <span class="badge badge-danger">HOT</span>
                    @Html.EditorFor(model => model.chargeRateSixMonth, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.chargeRateSixMonth, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}
<br />
<div>
    <div class="btn-group">
        <span class="btn btn-primary btn-sm">
            <span class="fa fa-user"></span>
        </span>
        <input type="submit" value="Create" class="btn btn-primary btn-sm" />
    </div>
    @Html.Partial("_BackToListButtonPartial")
</div>
