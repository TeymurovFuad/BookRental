@model BookRental.ViewModel.UserViewModel

@{
    ViewBag.Title = "Details";
}
<br />

<h2 class="table-warning text-center"><span class="fa fa-info my-1"></span>&nbsp;<span class="fa fa-user"></span></h2>
<h3 class="font-weight-bold text-center">User Info</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    <br />
    <div class="col-10">
        <div class="border rounded border-danger">
            <br />
            <div class="form-group row">
                @Html.LabelFor(model => model.fname, htmlAttributes: new { @class = "control-label col-md-2 offset-1 col-form-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.fname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.fname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.lname, htmlAttributes: new { @class = "control-label col-md-2 offset-1 col-form-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.lname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.lname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.bdate, htmlAttributes: new { @class = "control-label col-md-2 offset-1 col-form-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.bdate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.bdate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.phone, htmlAttributes: new { @class = "control-label col-md-2 offset-1 col-form-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.phone, "{0:MM dd yyyy}", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2 offset-1 col-form-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.email, "{0:MM dd yyyy}", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.userMemTypeId, "Membership Type", htmlAttributes: new { @class = "control-label col-md-2 offset-1 col-form-label" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.userMemTypeId, new SelectList(Model.MembershipTypes, "membershipTypesIdPK", "name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.userMemTypeId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-10">
                @Html.Partial("_BackToListButtonPartial")
                <input type="submit" name="name" value="Save" class="btn btn-primary btn-sm" />
            </div>
        </div>
    </div>
}